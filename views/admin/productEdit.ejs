                          </div>
                          <div class="form-group mb-3">
                            <label for="weight">Weight:</label>
                            <input class="form-control" type="number" name="weight" id="weight">
                          </div>
                          <div class="form-group mb-3">
                            <label for="width">Quality checking :</label>
                            <input class="form-control" type="text" placeholder="yes" name="quality">
                          </div>
                          <div class="form-group mb-3">
                            <label for="width">Freshness duration :</label>
                            <input class="form-control" type="text" placeholder="3 days" name="freshness">
                          </div>
                          <div class="form-group mb-3">
                            <label for="width">when packeting :</label>
                            <input class="form-control" type="text" name="packeting" value="without touch of hand" placeholder="without touch of hand">
                          </div>
                        </div>
                      </div>
                      <!--tag-->
                      <div class="mb-3">
                        <label class="form-label">Tags
                        </label>
                        <input name='tags' value="" class="form-control w-100">
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- card -->
                <div class="card mb-4">
                  <!-- card body -->
                  <div class="card-body">
                    <!-- input -->
                    <div class="mb-3">
                      <label class="form-label">Regular Price</label>
                      <input type="text" class="form-control" name="regularprice" value="49.00" placeholder="$ 49.00">
                    </div>
                    <!-- input -->
                    <div class="mb-3">
                      <label class="form-label">Sale Price</label>
                      <input type="text" class="form-control" name="saleprice" value="49.00" placeholder="$ 49.00">
                    </div>
                    <!-- input -->
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" name="priceincludestaxes" role="switch" id="priceIncluded" checked>
                      <label class="form-check-label" for="priceIncluded">
                      Price includes taxes</label>
                    </div>
                    <div>
                      <input name="publish" class="form-check-input" type="checkbox" role="switch" checked>
                      <label class="form-check-label" for="publish">publish</label>
                    </div>
                  </div>
                </div>
                <!-- button -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">
                  Create Product
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>
