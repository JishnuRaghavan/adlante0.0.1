<script>

function addCategory() {
  const newCategory = categoryInput.value.trim();
  if (newCategory !== "") {
    // Add the new category to the client-side select element
    const option = document.createElement("option");
    option.value = newCategory;
    option.textContent = newCategory;
    categorySelect.appendChild(option);

    // Clear the input field
    categoryInput.value = "";

    // Send a POST request to the server to save the new category
    fetch("/admin/addCategory", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ maincategory: newCategory }),
    })
      .then((data) => {
        // Handle any server response if needed
        console.log(data);

        // Dynamically update the categorySelect dropdown with the new category
        // (Assuming that 'data' contains the updated category list)
        updateDropdownOptions(categorySelect, data.categories);
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  }
}

function addSubcategory() {
  const newCategory = categoryInput.value.trim();
  const newSubcategory = subcategoryInput.value.trim();
  const category  = document.getElementById('categorySelect').value;
  if (newSubcategory !== "") {
    // Add the new subcategory to the client-side select element
    const option = document.createElement("option");
    option.value = newSubcategory;
    option.textContent = newSubcategory;
    subcategorySelect.appendChild(option);

    // Clear the input field
    subcategoryInput.value = "";

    // Send a POST request to the server to save the new subcategory
    fetch("/admin/addSubCategory", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ subcategory: newSubcategory,maincategory:category }),
    })
      .catch((error) => {
        console.error("Error:", error);
      });
  }
}

</script>

