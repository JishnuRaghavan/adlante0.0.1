<script>
  const genderMale  = document.getElementById('inlineRadio1');
  const genderFemale= document.getElementById('inlineRadio2');
  if('<%= product.gender.toString() %>' === 'Male'){
    genderMale.checked = 'true';
  }
  else{
    genderFemale.checked  = true;
  }

  const productSize = document.getElementById('productSize');
  if('<%= product.size %>' === 's'){
    productSize.textContent = 'small';
  }
  else if('<%= product.size %>' === 'm'){
    productSize.textContent = 'medium';
  }
  else if('<%= product.size %>' === 'l'){
    productSize.textContent = 'large';
  }
  else{
    productSize.textContent = '<%= product.size %>';
  }
</script>

