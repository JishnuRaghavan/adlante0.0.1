<script>
  function getSelectedUserEmails() {
    const selectedEmails = [];
    // Loop through checkboxes and collect selected user emails
    document.querySelectorAll('input[type="checkbox"]').forEach((checkbox) => {
      if (checkbox.checked) {
        selectedEmails.push(checkbox.value);
      }
    });
    return selectedEmails;
  }

  function handleUserAction(action) {
    const selectedEmails = getSelectedUserEmails();
    
    // Define the backend endpoint based on the action
    const endpoint = action === 'block' ? '/admin/block-users' : '/admin/unblock-users';
    
    // Send a POST request to your backend with selectedEmails
    fetch(endpoint, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ selectedEmails }),
    })
      .then(() => {
      
        console.log("reloading");
        window.location.reload();

      })
      .catch((error) => {
        console.error(`There was a problem with the ${action} operation:`, error);
        // Handle errors appropriately
      });
  }
      
</script>

