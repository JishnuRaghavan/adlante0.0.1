    <% if (typeof cart !== 'undefined' && typeof products !== 'undefined') { %>
      <form id="cartForm" action="/updateCart" method="post">
        <section class="cart_area">
          <div class="container">
            <div class="cart_inner">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th style="text-align: center;" scope="col">Product</th>
                      <th style="text-align: center;" scope="col">Price</th>
                      <th style="text-align: center;" scope="col">Quantity</th>
                      <th style="text-align: center;" scope="col">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let subtotal = 0; %>
                    <% cart.items.forEach((item) => { %>
                      <% const product = products.find((p) => p._id.toString() === item.productId.toString()); %>
                      <tr>
                        <td style="border: none;">
                          <div class="media">
                            <div class="d-flex">
                              <img src="/productimg/<%= product.defaultimage %>" alt="" />
                            </div>
                            <div class="media-body">
                              <p>Minimalistic shop for multipurpose use</p>
                            </div>
                          </div>
                        </td>
                        <td style="border: none;">
                          <h5><%= product.saleprice %></h5>
                        </td>
                        <td style="border: none;">
                          <div class="product_count">
                            <input
                              type="number"
                              name="quantity_<%= item.productId %>"
                              id="sst<%= item.productId %>"
                              maxlength="12"
                              value="<%= item.quantity %>"
                              title="Quantity:"
                              class="input-text qty"
                            />
                            <button
                              onclick="updateQuantity('<%= item.productId %>', '<%= product.saleprice %>', 1);"
                              class="increase items-count"
                              type="button"
                            >
                              <i class="lnr lnr-chevron-up"></i>
                            </button>
                            <button
                              onclick="updateQuantity('<%= item.productId %>', '<%= product.saleprice %>', -1);"
                              class="reduced items-count"
                              type="button"
                            >
                              <i class="lnr lnr-chevron-down"></i>
                            </button>
                            <script>
                              function updateQuantity(productId, productPrice, change) {
                                var result = document.getElementById('sst' + productId);
                                var quantity = parseInt(result.value) + change;
    
                                if (!isNaN(quantity) && quantity > 0) {
                                  result.value = quantity;
                                  updateTotal(productId, productPrice, quantity);
                                  updateSubtotal();
                                }
                              }
    
                              function updateTotal(productId, productPrice, quantity) {
                                var totalElement = document.getElementById('total' + productId);
                                totalElement.innerText = '$' + (productPrice * quantity).toFixed(2);
                              }
    
                              function updateSubtotal() {
                                // Calculate subtotal based on updated totals
                                let updatedSubtotal = 0;
                                '<% cart.items.forEach((item) => { %>'
                                  '<% const product = products.find((p) => p._id.toString() === item.productId.toString()); %>'
                                  var totalElement = document.getElementById('total<%= item.productId %>');
                                  updatedSubtotal += parseFloat(totalElement.innerText.replace('$', ''));
                                '<% }) %>'
                                var subtotalElement = document.getElementById('subtotal');
                                subtotalElement.innerText = '$' + updatedSubtotal.toFixed(2);
                              }
                            </script>
                          </div>
                          <button onclick="deleteCart('<%= item.productId %>')" style="border-radius: 50%;">delete</button>
                        </td>
                        <td style="border: none;">
                          <h5 id="total<%= item.productId %>">$<%= (product.saleprice * item.quantity).toFixed(2) %></h5>
                        </td>
                      </tr>
                    <% }) %>
                    <tr class="bottom_button">
                      <td style="border: none;">
                        <button type="submit" class="gray_btn" >
                          Update Cart
                        </button>
                      </td>
                      <td style="border: none;"></td>
                      <td style="border: none;"></td>
                      <td style="border: none;">
                        <div class="cupon_text">
                          <input type="text" placeholder="Coupon Code" />
                          <a class="main_btn" href="#">Apply</a>
                          <a class="gray_btn" href="#">Close Coupon</a>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td style="border: none;"></td>
                      <td style="border: none;"></td>
                      <td style="border: none;">
                        <h5>Subtotal</h5>
                      </td>
                      <td style="border: none;">
                        <h5 id="subtotal">$<%= initialSubtotal.toFixed(2) %></h5>
                      </td>
                    </tr>
                    <tr class="out_button_area">
                      <td style="border: none;"></td>
                      <td style="border: none;"></td>
                      <td style="border: none;"></td>
                      <td style="border: none;">
                        <div class="checkout_btn_inner">
                          <a class="gray_btn" href="/shop">Continue Shopping</a>
                          <a class="main_btn" href="/checkoutPage">Proceed to checkout</a>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>
      </form>
    <% } %>
